<!DOCTYPE html>
<html lang="en" id="head">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Sustainability Statement - EPCarpool</title>
  <link href="./bulma.min.css" rel="stylesheet" type="text/css" />
  <link href="./style.css" rel="stylesheet" type="text/css" />
  <script src="https://kit.fontawesome.com/16ae8e710d.js" crossorigin="anonymous"></script>
  <link rel="icon" href="favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="./style.css">
  <script src="/co2Tracker.js"></script>
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .sustainability-hero {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      margin: 20px;
      padding: 60px 40px;
    }

    .impact-counter {
      background: linear-gradient(135deg, #30B700, #4CAF50);
      color: white;
      border-radius: 20px;
      padding: 40px;
      margin: 40px 0;
      text-align: center;
      box-shadow: 0 15px 30px rgba(48, 183, 0, 0.3);
      position: relative;
      overflow: hidden;
    }

    .impact-counter::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
      animation: shimmer 3s infinite;
    }

    @keyframes shimmer {
      0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
      100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
    }

    .co2-main-number {
      font-size: 4rem;
      font-weight: 900;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      margin: 20px 0;
      position: relative;
      z-index: 1;
    }

    .co2-label {
      font-size: 1.4rem;
      opacity: 0.9;
      font-weight: 600;
      position: relative;
      z-index: 1;
    }

    .equivalents-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      margin: 40px 0;
    }

    .equivalent-card {
      background: white;
      border-radius: 15px;
      padding: 30px;
      text-align: center;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-top: 4px solid;
    }

    .equivalent-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .equivalent-card.bottles {
      border-top-color: #2196F3;
    }

    .equivalent-card.rice {
      border-top-color: #FF9800;
    }

    .equivalent-card.trees {
      border-top-color: #4CAF50;
    }

    .equivalent-icon {
      font-size: 3rem;
      margin-bottom: 20px;
    }

    .equivalent-number {
      font-size: 2.5rem;
      font-weight: 800;
      margin: 15px 0;
    }

    .equivalent-label {
      font-size: 1.1rem;
      color: #666;
      font-weight: 500;
    }

    .story-section {
      background: white;
      border-radius: 15px;
      padding: 40px;
      margin: 30px 0;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .story-title {
      color: #30B700;
      font-size: 2.2rem;
      font-weight: 700;
      margin-bottom: 25px;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .story-text {
      font-size: 1.2rem;
      line-height: 1.8;
      color: #444;
      margin-bottom: 20px;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin: 40px 0;
    }

    .stat-card {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      padding: 25px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .stat-number {
      font-size: 2.2rem;
      font-weight: 800;
      margin-bottom: 8px;
    }

    .stat-label {
      font-size: 1rem;
      opacity: 0.9;
    }

    .back-button {
      background: linear-gradient(135deg, #30B700, #4CAF50);
      color: white;
      border: none;
      padding: 15px 30px;
      border-radius: 50px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 8px 20px rgba(48, 183, 0, 0.3);
    }

    .back-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 25px rgba(48, 183, 0, 0.4);
    }

    .floating-leaves {
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
      pointer-events: none;
    }

    .leaf {
      position: absolute;
      color: rgba(48, 183, 0, 0.3);
      font-size: 1.5rem;
      animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(180deg); }
    }

    @media (max-width: 768px) {
      .sustainability-hero {
        margin: 10px;
        padding: 30px 20px;
      }
      
      .co2-main-number {
        font-size: 2.5rem;
      }
      
      .equivalents-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }
    }
  </style>
</head>

<body>
  <main>
    <div class="floating-leaves">
      <i class="fas fa-leaf leaf" style="top: 10%; left: 10%; animation-delay: 0s;"></i>
      <i class="fas fa-leaf leaf" style="top: 20%; right: 15%; animation-delay: 1s;"></i>
      <i class="fas fa-leaf leaf" style="bottom: 30%; left: 20%; animation-delay: 2s;"></i>
      <i class="fas fa-leaf leaf" style="bottom: 10%; right: 10%; animation-delay: 3s;"></i>
    </div>

    <section class="hero is-fullheight">
      <div class="hero-body">
        <div class="container">
          <div class="sustainability-hero">
            
            <!-- Header -->
            <div class="has-text-centered" style="margin-bottom: 50px;">
              <span style="font-size: 4rem; color: #30B700;">
                <i class="fa-solid fa-leaf"></i>
              </span>
              <h1 class="title is-1" style="color: #2c3e50; margin: 20px 0; font-weight: 800;">
                Our Impact
              </h1>
              <p style="font-size: 1.3rem; color: #666; max-width: 600px; margin: 0 auto;">
                Together, we're making a real difference for our planet, one carpool at a time.
              </p>
            </div>

            <!-- Impact Counter -->
            <div class="impact-counter">
              <div class="co2-label">Total CO₂ Saved</div>
              <div class="co2-main-number" id="total-co2-display">0</div>
              <div class="co2-label">kilograms of carbon dioxide</div>
            </div>

            <!-- Equivalents Grid -->
            <div class="equivalents-grid">
              <div class="equivalent-card bottles">
                <div class="equivalent-icon" style="color: #2196F3;">
                  <i class="fas fa-bottle-water"></i>
                </div>
                <div class="equivalent-number" id="bottles-equivalent">0</div>
                <div class="equivalent-label">plastic bottles worth of CO₂</div>
              </div>
              
              <div class="equivalent-card rice">
                <div class="equivalent-icon" style="color: #FF9800;">
                  <i class="fas fa-seedling"></i>
                </div>
                <div class="equivalent-number" id="rice-equivalent">0</div>
                <div class="equivalent-label">bowls of rice worth of CO<sub>2</sub></div>
              </div>
              
              <div class="equivalent-card trees">
                <div class="equivalent-icon" style="color: #4CAF50;">
                  <i class="fas fa-tree"></i>
                </div>
                <div class="equivalent-number" id="trees-equivalent">0</div>
                <div class="equivalent-label">CO<sub>2</sub> equivalence in trees planted</div>
              </div>
            </div>

            <!-- Story Section -->
            <div class="story-section">
              <h2 class="story-title">
                <i class="fas fa-lightbulb"></i>
                Our Story
              </h2>
              <p class="story-text">
                The idea for EPCarpool was born at the first EPS Hackathon in January of 2024. The prompt for that competition was <strong>"How can we make EPS more sustainable?"</strong>
              </p>
              <p class="story-text">
                There are many ways we could approach this topic: We could build a website to raise awareness or we could greenify a component of EPS, but we decided to focus on the student life aspect of sustainability. <strong>How can students at EPS engage in climate-friendly actions, and how can they integrate it into a convenient lifestyle?</strong>
              </p>
              <p class="story-text">
                EPCarpool is a place that allows students to engage directly in lowering the footprint from transportation for school events: socials, sports, academic teams, and more. It allows us to work together to make EPS extracurriculars a more sustainable part of our culture and to promote greener ways of transportation.
              </p>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
              <div class="stat-card">
                <div class="stat-number" id="total-carpools">0</div>
                <div class="stat-label">Total Carpools</div>
              </div>
              <div class="stat-card">
                <div class="stat-number" id="miles-saved">0</div>
                <div class="stat-label">Miles Saved</div>
              </div>
              <div class="stat-card">
                <div class="stat-number" id="students-participating">0</div>
                <div class="stat-label">Students Participating</div>
              </div>
            </div>

            <!-- Call to Action -->
            <div class="has-text-centered" style="margin-top: 50px;">
              <p style="font-size: 1.2rem; color: #2c3e50; margin-bottom: 30px; font-weight: 600;">
                Ready to make your own impact? Start carpooling today!
              </p>
              <button class="back-button" onclick="window.location.href='/'">
                <i class="fas fa-car" style="margin-right: 10px;"></i>
                Start Carpooling
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    // CO2 equivalents calculations
    function calculateEquivalents(co2Kg) {
      // 1 kg CO2 = approximately 500 plastic bottles (0.002 kg CO2 per bottle)
      const bottles = Math.round(co2Kg * 500);
      
      // 1 kg CO2 = approximately 10 bowls of rice (0.1 kg CO2 per bowl)
      const rice = Math.round(co2Kg * 10);
      
      // 1 tree absorbs about 21.77 kg CO2 per year
      const trees = Math.round(co2Kg / 21.77 * 10) / 10; // Round to 1 decimal
      
      return { bottles, rice, trees };
    }

    // Animate numbers counting up
    function animateNumber(element, start, end, duration = 2000) {
      const startTime = performance.now();
      
      function update(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        
        // Easing function for smooth animation
        const easeOutCubic = 1 - Math.pow(1 - progress, 3);
        const current = start + (end - start) * easeOutCubic;
        
        if (element.id === 'trees-equivalent') {
          element.textContent = current.toFixed(1);
        } else if (element.id === 'total-co2-display') {
          element.textContent = current.toFixed(2);
        } else {
          element.textContent = Math.floor(current).toLocaleString();
        }
        
        if (progress < 1) {
          requestAnimationFrame(update);
        }
      }
      
      requestAnimationFrame(update);
    }

    // Update all displays with CO2 data
    function updateDisplays(co2Saved) {
      const equivalents = calculateEquivalents(co2Saved);
      
      // Animate the main CO2 number
      const mainDisplay = document.getElementById('total-co2-display');
      animateNumber(mainDisplay, 0, co2Saved);
      
      // Animate equivalents
      setTimeout(() => {
        animateNumber(document.getElementById('bottles-equivalent'), 0, equivalents.bottles);
        animateNumber(document.getElementById('rice-equivalent'), 0, equivalents.rice);
        animateNumber(document.getElementById('trees-equivalent'), 0, equivalents.trees);
      }, 500);
      
      // Update stats (placeholder values - these would come from your API)
      setTimeout(() => {
        animateNumber(document.getElementById('total-carpools'), 0, Math.round(co2Saved * 2.5));
        animateNumber(document.getElementById('miles-saved'), 0, Math.round(co2Saved * 12));
        animateNumber(document.getElementById('students-participating'), 0, Math.round(co2Saved * 1.8));
      }, 1000);
    }

    // Fetch and display CO2 savings data
    async function loadCO2Data() {
      try {
        const response = await fetch('/api/user/co2-savings', {
          headers: {
            'Accept': 'application/json',
            'Cache-Control': 'no-cache'
          }
        });
        
        if (response.ok) {
          const data = await response.json();
          const co2Saved = data.co2Saved || 0;
          updateDisplays(co2Saved);
        } else {
          console.error('Failed to fetch CO2 data');
          updateDisplays(0);
        }
      } catch (error) {
        console.error('Error fetching CO2 data:', error);
        updateDisplays(0);
      }
    }

    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', function() {
      loadCO2Data();
    });
  </script>
</body>

</html>
